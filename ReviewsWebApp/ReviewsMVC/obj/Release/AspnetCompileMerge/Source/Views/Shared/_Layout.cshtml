<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Reviews</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/lightbox.css" rel="stylesheet">
    <!-- Lightbox:
        Author: Lokesh Dhakar
        Licence: https://raw.githubusercontent.com/lokesh/lightbox2/master/LICENSE
        Website: https://lokeshdhakar.com/projects/lightbox2
        -->
</head>
<body style="width:100%;margin:0 auto;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Reviews", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Last 10", "Index", "Home")</li>
                    <li>@Html.ActionLink("Share story", "ShareStory", "Home")</li>
                    <li>@Html.ActionLink("Find story", "FindStory", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <!--<li>Html.ActionLink("About", "About", "Home")</li>
                    <li>Html.ActionLink("Contact", "Contact", "Home")</li>-->
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin:0 auto;">
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.Year - Reviews</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="../../Scripts/lightbox-2.6.js" type="text/javascript"></script>
</body>
</html>
